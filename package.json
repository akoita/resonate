{
  "name": "resonate",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint:staged": "lint-staged"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11"
  },
  "lint-staged": {
    "backend/**/*.{ts,tsx}": [
      "bash -lc \"npm --prefix backend run lint\""
    ],
    "web/**/*.{js,jsx,ts,tsx}": [
      "bash -lc \"npm --prefix web run lint\""
    ]
  }
}
