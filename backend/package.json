    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.0",
    "@nestjs/throttler": "^6.3.0",
    "@prisma/client": "^5.18.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0",
    "viem": "^2.44.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.0",
    "@types/jest": "^29.5.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "prisma": "^5.18.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
