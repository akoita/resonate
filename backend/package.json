{
  "name": "resonate-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend services for Project Resonate (MVP).",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
